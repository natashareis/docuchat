# Database Configuration
# For local development
DATABASE_URL=sqlite:///./app.db
# For production with PostgreSQL
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# Groq API Configuration - GET YOUR KEY FROM https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Application Settings
PROJECT_NAME=DocuChat AI

# CORS Origins - comma-separated for production deployment
# For local development:
BACKEND_CORS_ORIGINS=http://localhost:5173
# For production (Cloudflare Pages):
# BACKEND_CORS_ORIGINS=https://docuchat.pages.dev,https://www.yourdomain.com

SECRET_KEY=your-secret-key-change-this-in-production

# Upload Settings
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# Vector Store Settings
CHROMA_PERSIST_DIRECTORY=./chroma_data
COLLECTION_NAME=documents

# LLM Settings
MODEL_NAME=llama-3.3-70b-versatile
TEMPERATURE=0.7
MAX_TOKENS=1024
